<%- include("layout/header") %>
<div class="container">
    <div class="row">
        <h1>Categories List</h1>
        <div class="table-responsive">
            <% if (categories !='' ) { %>
                <table class="table table-striped text-center mt-3 mb-3">
                    <thead>
                        <tr class="table-dark">
                            <th>INDEX</th>
                            <th>CATEGORY ID</th>
                            <th>CATEGORY NAME</th>
                            <th>ACTION</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% categories.forEach((row, index)=> { %>
                            <tr class="align-middle">
                                <td>
                                    <%= index %>
                                </td>
                                <td>
                                    <%= row._id %>
                                </td>
                                <td>
                                    <%= row.categoryName %>
                                </td>
                                <td>
                                    <a href="/categories/<%= row._id %>/addProduct" class="btn btn-primary">Add Product</a>
                                    <a href="/categories/<%= row._id %>/edit" class="btn btn-success">Edit</a>
                                    <a href="/categories/<%= row._id %>/delete" class="btn btn-danger">Delete</a>
                                </td>
                            </tr>
                            <% }) %>



                    </tbody>
                </table>
                <% } else { %>
                    <h1 class="text-center text-secondary mt-5">No Categories Found!</h1>
                    <% } %>
        </div>
    </div>
</div>
<%- include("layout/footer") %>
